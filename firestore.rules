rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Any authenticated user is admin (as per requirements)
      return isAuthenticated();
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Services collection
    match /services/{serviceId} {
      // Public can read published services
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Portfolio collection
    match /portfolio/{portfolioId} {
      // Public can read published portfolio items
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Pricing collection
    match /pricing/{pricingId} {
      // Public can read published pricing
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Blogs collection
    match /blogs/{blogId} {
      // Public can read published blogs
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Testimonials collection
    match /testimonials/{testimonialId} {
      // Public can read published testimonials
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Partners collection
    match /partners/{partnerId} {
      // Public can read published partners
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Team collection
    match /team/{memberId} {
      // Public can read published team members
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Jobs collection
    match /jobs/{jobId} {
      // Public can read published jobs
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Job Applications collection
    match /job-applications/{applicationId} {
      // Anyone can create applications (public can apply)
      allow create: if true;
      // Only admins can read and update applications
      allow read, update, delete: if isAdmin();
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Public can read published activities
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // FAQs collection
    match /faqs/{faqId} {
      // Public can read published FAQs
      allow read: if resource.data.status == 'published' || isAdmin();
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Settings collection (single document)
    match /settings/{settingId} {
      // Public can read settings
      allow read: if true;
      // Only admins can write
      allow create, update, delete: if isAdmin();
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
